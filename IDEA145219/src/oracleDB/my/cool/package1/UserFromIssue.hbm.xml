<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="oracleDB.my.cool.package1">
    <class table="my_table" name="MyClass">
        <id name="id">
            <generator class="native"/>
        </id>
        <property name="my_date" column="my_date" type="timestamp"/>
        <property name="type" column="type" not-null="true" length="6"/>
        <property name="description" column="description" length="500"/>
    </class>
</hibernate-mapping>